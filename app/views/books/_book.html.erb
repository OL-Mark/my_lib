<div id="<%= dom_id book %>">
  <% if book.pictures.attached? %>
    <div style="display: flex; gap: 8px; flex-wrap: wrap; align-items: center;">
        <%= image_tag book.pictures.first.variant(resize_to_limit: [100, 100]) %>
    </div>
  <% end %>

  <p>
    <strong>Title:</strong>
    <%= book.title %>
  </p>

  <p>
    <strong>Authors:</strong>
    <%= book.authors.pluck(:name).join(", ") %>
  </p>

  <p>
    <strong>ISBN:</strong>
    <%= book.isbn %>
  </p>
</div>
